<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.ERaportAdminFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Raport"
        android:textSize="32sp"
        android:textFontWeight="800"
        android:fontFamily="@font/opensans_bold"
        android:textColor="@color/profileColorTitle"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tf_studentName"
            android:layout_width="388dp"
            android:layout_height="24dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_tables"
            android:layout_gravity="center_horizontal"
            android:hint="Nama Siswa">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/textEraporInput"
                android:textSize="12sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tf_studentNisn"
            android:layout_width="388dp"
            android:layout_height="24dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_tables"
            android:layout_gravity="center_horizontal"
            android:hint="NISN">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/textEraporInput"
                android:textSize="12sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tf_studentSchool"
            android:layout_width="388dp"
            android:layout_height="24dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_tables"
            android:layout_gravity="center_horizontal"
            android:hint="Sekolah">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/textEraporInput"
                android:textSize="12sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tf_studentSkill"
            android:layout_width="388dp"
            android:layout_height="24dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_tables"
            android:layout_gravity="center_horizontal"
            android:hint="Bidang Keahlian/Program Keahlian/Kompetensi Keahlian">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/textEraporInput"
                android:textSize="12sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tf_studentSemester"
            android:layout_width="388dp"
            android:layout_height="24dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_tables"
            android:layout_gravity="center_horizontal"
            android:hint="Semester">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/textEraporInput"
                android:textSize="12sp"
                />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tf_studentClassNumber"
            android:layout_width="388dp"
            android:layout_height="24dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/background_tables"
            android:layout_gravity="center_horizontal"
            android:hint="Kelas, Absen">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:textColor="@color/textEraporInput"
                android:textSize="12sp"
                />

        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="130dp"
        android:src="@drawable/erapor"
        android:layout_gravity="center"
        />



</FrameLayout>