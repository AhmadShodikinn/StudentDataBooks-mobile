<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".UI.DashboardStudentFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="316dp"
        android:background="@color/dashboardBackground" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingTop="30dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Beranda Siswa"
            android:fontFamily="@font/opensans_bold"
            android:textFontWeight="400"
            android:textSize="30sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/imgFotoWaktuDiterima"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/fe_account_background"
            android:layout_gravity="end"
            android:layout_marginRight="40dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:gravity="center">

        <LinearLayout
            android:layout_width="361dp"
            android:layout_height="169dp"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:cardCornerRadius="10px">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="left"
                    android:background="@color/whiteBone">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@mipmap/persons_foreground"
                        android:layout_gravity="left"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bayu Galon"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_semibold"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/tv_classMajor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="XII RPL 1 / 27"
                        android:fontFamily="@font/opensans_regular"
                        android:textSize="10sp"
                        android:textFontWeight="200"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/studentForce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="Siswa Angkatan 2022"
                        android:textColor="@color/primaryButtonText"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>



    </LinearLayout>

</FrameLayout>