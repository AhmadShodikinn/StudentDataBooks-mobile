<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/dashboardSecondaryBackground"
    tools:context=".UI.DashboardAdminFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="383dp"
        android:background="@color/dashboardBackground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="40dp"
        android:paddingTop="30dp"
        android:text="Dashboard"
        android:fontFamily="@font/coolvetica_rg"
        android:textFontWeight="400"
        android:textSize="45sp"
        android:textColor="@color/white"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="100dp"
        android:gravity="center">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="169dp"
                app:cardCornerRadius="10px"
                android:layout_marginEnd="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="left"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@mipmap/persons_foreground"
                        android:layout_gravity="left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Siswa"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_semibold"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Siswa"
                        android:fontFamily="@font/inter_extralight"
                        android:textSize="10sp"
                        android:textFontWeight="200"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/StudentTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_semibold"
                        android:text="1004"
                        android:textColor="@color/primaryButtonText"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:translationY="-8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="169dp"
                app:cardCornerRadius="10px">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="left"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@mipmap/upload_document_foreground"
                        android:layout_gravity="left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data di inputkan"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_semibold"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Siswa"
                        android:fontFamily="@font/inter_extralight"
                        android:textSize="10sp"
                        android:textFontWeight="200"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/UploadTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2011"
                        android:fontFamily="@font/inter_semibold"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:translationY="-8dp"
                        android:textColor="@color/primaryButtonText"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="30dp">

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="169dp"
                app:cardCornerRadius="10px"
                android:layout_marginEnd="16dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="left"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@mipmap/account_foreground"
                        android:layout_gravity="left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Siswa Laki Laki"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_semibold"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Siswa"
                        android:fontFamily="@font/inter_extralight"
                        android:textSize="10sp"
                        android:textFontWeight="200"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/MaleStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1004"
                        android:fontFamily="@font/inter_semibold"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:textColor="@color/primaryButtonText"
                        android:translationY="-8dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="160dp"
                android:layout_height="169dp"
                app:cardCornerRadius="10px">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="15dp"
                    android:gravity="left"
                    android:background="@color/white">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@mipmap/fe_account_foreground"
                        android:layout_gravity="left"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Siswi Perempuan"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/inter_semibold"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Data Siswi"
                        android:fontFamily="@font/inter_extralight"
                        android:textSize="10sp"
                        android:textFontWeight="200"
                        android:textAlignment="center"
                        android:textColor="@android:color/black"/>

                    <TextView
                        android:id="@+id/FemaleStudent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1004"
                        android:fontFamily="@font/inter_semibold"
                        android:textStyle="bold"
                        android:textSize="36sp"
                        android:translationY="-8dp"
                        android:textColor="@color/primaryButtonText"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        
    </LinearLayout>





</FrameLayout>
