<!-- res/layout/custom_snackbar.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <!-- CardView sebagai container utama -->
    <androidx.cardview.widget.CardView
        android:layout_width="412dp"
        android:layout_height="157dp"
        android:backgroundTint="#008CFF"
        app:cardCornerRadius="10dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/snackbar_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/customSnackbarTitle"
                android:fontFamily="@font/opensans_bold"
                android:textColor="#FFFFFF"
                android:textAlignment="center"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/snackbar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ajukan Untuk Merubah Data!"
                android:fontFamily="@font/opensans_bold"
                app:cornerRadius="15dp"
                app:icon="@drawable/snackbar_icon"
                app:iconGravity="textEnd"
                app:iconTint="#559CFC"
                android:textColor="#559CFC"
                android:backgroundTint="@color/white"
                android:layout_marginTop="8dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
