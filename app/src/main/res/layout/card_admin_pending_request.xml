<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="344dp"
    android:layout_height="105dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="34dp"
    android:orientation="vertical"
    android:background="#EFF2F4"
    android:padding="8dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:gravity="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start">

            <ImageView
                android:id="@+id/logo_image"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/ic_calendar"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/date_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:fontFamily="@font/opensans_semibold"
                android:text="17 Agustus 2024"
                android:textColor="#484C52"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end">

            <TextView
                android:id="@+id/status_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Menunggu"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="#484C52"
                android:textSize="12sp"
                android:gravity="center_vertical"/>
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000000"
        android:layout_marginTop="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/studentNamePending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:fontFamily="@font/opensans_bold"
                android:textSize="14sp"
                android:textColor="#484C52"
                android:layout_marginTop="8dp"/>

            <TextView
                android:id="@+id/description_text"
                android:layout_width="190dp"
                android:layout_height="wrap_content"
                android:text="@string/cardPrimaryDescription"
                android:fontFamily="@font/opensans_semibold"
                android:textSize="12sp"
                android:textColor="#484C52"
                android:layout_marginTop="4dp"/>

        </LinearLayout>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/confirmation_button"
            android:layout_width="100dp"
            android:layout_height="48dp"
            android:layout_gravity="center|end"
            android:backgroundTint="#FFFFFF"
            android:text="Periksa"
            app:icon="@drawable/ic_play"
            app:iconTint="#484C52"
            app:iconSize="14dp"
            android:textColor="#484C52"
            android:textSize="14sp"
            app:iconGravity="textEnd"
            android:padding="0dp"
            app:iconPadding="10dp"
            app:cornerRadius="3dp" />

    </LinearLayout>





</LinearLayout>
